{
  "name": "@angular-slider/ngx-slider",
  "version": "17.0.0",
  "private": true,
  "description": "Self-contained, mobile friendly slider component for Angular based on angularjs-slider",
  "keywords": [
    "slider",
    "ui",
    "component",
    "angular",
    "ng",
    "ngx"
  ],
  "author": "Piotr Dziwinski",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/angular-slider/ngx-slider.git"
  },
  "bugs": {
    "url": "https://github.com/angular-slider/ngx-slider/issues"
  },
  "homepage": "https://github.com/angular-slider/ngx-slider#readme",
  "scripts": {
    "prepare": "npm run prepare:lib && npm run prepare:demo-app",
    "prepare:lib": "node scripts/generate-lib-files.js",
    "prepare:demo-app": "node scripts/generate-demo-app-snippets.js && node scripts/generate-demo-app-docs.js && node scripts/copy-bootstrap-icons.js",
    "start": "npm run prepare && ng serve",
    "build": "npm run build:lib && npm run build:demo-app",
    "build:lib": "npm run prepare:lib && rimraf dist/ngx-slider && ng-packagr -p src/ngx-slider/ng-package.json && scss-bundle -e src/ngx-slider/lib/main.scss -o dist/ngx-slider/scss/ngx-slider.scss",
    "build:demo-app": "npm run prepare:demo-app && rimraf dist/demo-app && ng build --configuration production --base-href /ngx-slider/",
    "publish-gh": "scripts/publish-gh-pages.sh",
    "test": "npm run prepare && ng test",
    "test:once": "npm run prepare && ng test --watch=false",
    "lint": "npm run prepare && ng lint",
    "e2e": "npm run prepare && ng e2e",
    "ci": "npm run test:once && npm run e2e && npm run lint && npm run build:lib && npm run build:demo-app"
  },
  "dependencies": {
    "@angular/animations": "^17.1.1",
    "@angular/common": "^17.1.1",
    "@angular/compiler": "^17.1.1",
    "@angular/core": "^17.1.1",
    "@angular/forms": "^17.1.1",
    "@angular/platform-browser": "^17.1.1",
    "@angular/platform-browser-dynamic": "^17.1.1",
    "@angular/router": "^17.1.1",
    "@ng-bootstrap/ng-bootstrap": "^16.0.0",
    "bootstrap-icons": "^1.11.3",
    "detect-passive-events": "^2.0.3",
    "rxjs": "^7.8.1",
    "tslib": "^2.6.2",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.1.1",
    "@angular-eslint/builder": "17.2.1",
    "@angular-eslint/eslint-plugin": "17.2.1",
    "@angular-eslint/eslint-plugin-template": "17.2.1",
    "@angular-eslint/schematics": "17.2.1",
    "@angular-eslint/template-parser": "17.2.1",
    "@angular/cli": "^17.1.1",
    "@angular/compiler-cli": "^17.1.1",
    "@types/jasmine": "~5.1.4",
    "@types/node": "^20.11.13",
    "@typescript-eslint/eslint-plugin": "6.19.0",
    "@typescript-eslint/parser": "6.19.0",
    "codelyzer": "^6.0.2",
    "escape-html": "^1.0.3",
    "eslint": "^8.56.0",
    "jasmine-core": "~5.1.1",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "~6.4.2",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage-istanbul-reporter": "~3.0.3",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "mkdirp": "^3.0.1",
    "ng-packagr": "^17.1.2",
    "prismjs": "^1.29.0",
    "protractor": "~7.0.0",
    "protractor-console-plugin": "^0.1.1",
    "rimraf": "^5.0.5",
    "scss-bundle": "^3.1.2",
    "ts-node": "~10.9.2",
    "typedoc": "~0.25.7",
    "typescript": "~5.2.2",
    "webdriver-manager": "^12.1.9"
  }
}
